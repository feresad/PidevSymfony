{% extends 'base.html.twig' %}

{% block title %}Détails de l'événement : {{ evenement.nomEvent }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ evenement.nomEvent }}</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="card">
            <img src="{{ image_base_url ~ evenement.photoEvent }}" class="card-img-top" alt="{{ evenement.nomEvent }}">
            <div class="card-body">
                <h5 class="card-title">Détails de l'événement</h5>
                <ul class="list-group list-group-flush">
                    <p class="card-text">
                        Catégorie : {{ evenement.categorie ? evenement.categorie.nom : 'Non spécifiée' }}
                    </p>
                    <li class="list-group-item">
                        <strong>Date :</strong> {{ evenement.dateEvent ? evenement.dateEvent|date('d/m/Y H:i') : 'Non définie' }}
                    </li>
                    <li class="list-group-item">
                        <strong>Lieu :</strong> {{ evenement.lieuEvent }}
                    </li>
                    <li class="list-group-item">
                        <strong>Places maximum :</strong> {{ evenement.maxPlacesEvent }}
                    </li>
                </ul>
                <h5 class="mt-3">QR Code</h5>
                <img src="{{ path('evenement_qrcode', {id: evenement.id}) }}" alt="QR Code de l'événement" class="img-fluid" style="max-width: 200px;">
                <p>Scannez ce QR Code pour voir les détails de l'événement.</p>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('evenement_list') }}" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}