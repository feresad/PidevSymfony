{% extends 'baseadmin.html.twig' %}

{% block title %}Modifier l'événement : {{ evenement.nomEvent }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Modifier l'événement : {{ evenement.nomEvent }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }} {# Display global form errors #}

            <div class="mb-3">
                {{ form_label(form.nomEvent, 'Nom de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nomEvent, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.nomEvent, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.categorie, 'Catégorie de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.categorie, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.maxPlacesEvent, 'Nombre maximum de places', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.maxPlacesEvent, {'attr': {'class': 'form-control', 'required': 'required', 'type': 'number', 'min': '1'}}) }}
                {{ form_errors(form.maxPlacesEvent, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.dateEvent, 'Date de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateEvent, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.dateEvent, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.lieuEvent, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lieuEvent, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.lieuEvent, {'attr': {'class': 'invalid-feedback'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.photoFile, 'Photo (laisser vide pour conserver l\'actuelle)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.photoFile, {'attr': {'class': 'form-control', 'accept': 'image/jpeg,image/png,image/gif'}}) }}
                {{ form_errors(form.photoFile, {'attr': {'class': 'invalid-feedback'}}) }}
                {% if evenement.photoEvent %}
                    <p>Photo actuelle :</p>
                    <img src="{{ image_base_url ~ evenement.photoEvent }}" alt="{{ evenement.nomEvent }}" style="max-width: 200px;">
                {% endif %}
            </div>

            <div class="d-flex justify-content-center gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Enregistrer les Modifications</button>
                <a href="{{ path('evenement_list_admin') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}