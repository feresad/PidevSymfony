{% extends 'baseadmin.html.twig' %}

{% block title %} Ajouter un événement {% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-4">Ajouter un événement</h2>

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
        {% endif %}


            <div class="mb-3">
                {{ form_label(form.nomEvent, 'Nom de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nomEvent, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nomEvent) }}
                </div>    
            </div>

            <div class="mb-3">
                {{ form_label(form.categorie, 'Catégorie de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.categorie) }}
                </div> 
            </div>

            <div class="mb-3">
                {{ form_label(form.maxPlacesEvent, 'Nombre maximum de places', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.maxPlacesEvent, {'attr': {'class': 'form-control', 'required': 'required', 'type': 'number', 'min': '1'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.maxPlacesEvent) }}
                </div> 
            </div>

            <div class="mb-3">
                {{ form_label(form.dateEvent, 'Date de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateEvent, {'attr': {'class': 'form-control', 'required': 'required', 'type': 'datetime-local'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.dateEvent) }}
                </div> 
            </div>

            <div class="mb-3">
                {{ form_label(form.lieuEvent, 'Lieu de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lieuEvent, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.lieuEvent) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.photoFile, 'Photo de l\'événement', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.photoFile, {'attr': {'class': 'form-control','required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.photoFile) }}
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-5">
                <button type="submit" class="btn btn-primary">Ajouter</button>
                <a href="{{ path('evenement_list_admin') }}" class="btn btn-secondary" >Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}