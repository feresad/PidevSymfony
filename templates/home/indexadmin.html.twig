    <!-- ================ Summary Section ================= -->
    {% include 'summary/_summary_content.html.twig' with {
        totalReservations: totalReservations,
        activeCustomers: activeCustomers,
        topCoaches: topCoaches,
        monthLabels: monthLabels,
        monthlyRevenue: monthlyRevenue
