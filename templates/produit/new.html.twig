{% extends 'baseadmin.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-4">Ajouter un Produit</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}

            <div class="mb-3">
                {{ form_label(form.nom_produit, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom_produit, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom_produit) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.score, 'Score', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.score, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.score) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.platform, 'Plateforme', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.platform, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.platform) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.type) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.region, 'Région', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.region, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.region) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.activation_region, 'Région d\'activation', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.activation_region, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.activation_region) }}
                </div>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}