{% extends 'base.html.twig' %}

{% block title %}Modifier un Produit{% endblock %}

{% block body %}
<div class="container mt-5" style="background-color: #091221; color: white;">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="background-color: #091221; border-color: #0236a5;">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #0236a5; color: white;">
                    <h2>Modifier un Produit</h2>
                    <div>
                        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary" style="background-color: #0585c6; border-color: #0585c6;">Retour Ã  la liste</a>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.nom_produit, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.nom_produit, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.nom_produit) }}
                            </div>
                        </div>
                        
                        <div class="form-group mb-3">
                            {{ form_label(form.description, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.description) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.score, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.score, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.score) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.platform, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.platform, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.platform) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.type, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.type) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.region, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.region, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.region) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.activation_region, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.activation_region, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.activation_region) }}
                            </div>
                        </div>

                        <button class="btn btn-primary" style="background-color: #fc0369; border-color: #fc0369;">{{ button_label|default('Enregistrer') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}