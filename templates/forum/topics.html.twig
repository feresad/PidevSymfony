                e.preventDefault();
                const $btn = $(this);
                const id = $btn.data('id');
                const type = $btn.data('type');
                const userId = $btn.data('user-id');

                if (!userId || isNaN(userId) || parseInt(userId) <= 0) {
                    Swal.fire({
                        title: 'Error',
                        text: 'Invalid user ID for reporting.',
                        imageUrl: '{{ asset('images/one-piece-luffy.gif') }}',
                        imageWidth: 100,
                        imageHeight: 100,
                        background: '#1c2526',
                        color: '#d1d5db',
