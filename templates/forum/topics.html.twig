                        success: function(response) {
                            if (response.success) {
                                Swal.fire({
                                    title: 'Success',
                                    text: 'Report submitted successfully',
                                    imageUrl: '{{ asset('images/one-piece-luffy.gif') }}',
                                    imageWidth: 100,
                                    imageHeight: 100,
                                    background: '#1c2526',
                                    color: '#d1d5db',
                                    confirmButtonColor: '#0585e6'
                                });
                                $('.report-modal, .report-modal-backdrop').remove();
                            } else {
                                Swal.fire({
                                    title: 'Error',
                                    text: response.message || 'Failed to submit report',
                                    imageUrl: '{{ asset('images/one-piece-luffy.gif') }}',
                                    imageWidth: 100,
                                    imageHeight: 100,
                                    background: '#1c2526',
                                    color: '#d1d5db',
                                    confirmButtonColor: '#ff6f61'
                                });
                            }
                        },
                        error: function(xhr, status, error) {
                            console.error('AJAX error:', status, error, xhr.responseText);
                            Swal.fire({
                                title: 'Error',
                                text: 'Failed to submit report: ' + (xhr.responseJSON?.message || 'Server error'),
                                imageUrl: '{{ asset('images/one-piece-luffy.gif') }}',
                                imageWidth: 100,
                                imageHeight: 100,
                                background: '#1c2526',
                                color: '#d1d5db',
                                confirmButtonColor: '#ff6f61'
