{% extends 'base.html.twig' %}

{% block title %}Nouvelle Commande{% endblock %}

{% block body %}
<div class="container mt-5" style="background-color: #091221; color: white;">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="background-color: #091221; border-color: #0236a5;">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #0236a5; color: white;">
                    <h2 class="mb-0" style="font-size: 28px; text-transform: uppercase;">Nouvelle Commande</h2>
                    <a href="{{ path('app_commande_index') }}" class="btn" style="background-color: #0585c6; color: white;">Retour Ã  la liste</a>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        {% if not form.vars.valid %}
                            <div class="alert alert-danger">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}

                        <div class="form-group mb-4">
                            {{ form_label(form.utilisateur, 'Client', {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.utilisateur) }}
                            <div class="text-danger">
                                {{ form_errors(form.utilisateur) }}
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.produit, null, {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.produit) }}
                            <div class="text-danger">
                                {{ form_errors(form.produit) }}
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.status, null, {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.status) }}
                            <div class="text-danger">
                                {{ form_errors(form.status) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn" style="background-color: #fc0369; color: white;">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 