{% extends 'baseadmin.html.twig' %}

{% block title %}Détails de la Commande{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .order-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: #fff;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        
        .order-container h1 {
            margin-bottom: 30px;
            font-size: 24px;
            font-weight: 600;
            color: #333;
        }
        
        .product-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .product-details {
            flex: 1;
        }
        
        .product-name {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
        }
        
        .product-price {
            font-size: 20px;
            font-weight: 500;
            color: #0d6efd;
        }
        
        .status-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            color: white;
            background-color: #28a745;
        }
        
        .status-badge.pending {
            background-color: #ffc107;
            color: #212529;
        }
        
        .status-badge.cancelled {
            background-color: #dc3545;
        }
        
        .back-link {
            display: inline-block;
            padding: 8px 16px;
            color: #666;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 4px;
            transition: all 0.2s;
        }
        
        .back-link:hover {
            background-color: #f8f9fa;
            color: #333;
        }
        
        .action-buttons {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }
        
        .btn-delete {
            padding: 8px 16px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }
        
        .header-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }
        
        /* Users table styles */
        .users-table {
            width: 100%;
            border-collapse: collapse;
            color: #333;
        }
        
        .users-table thead th {
            background-color: #0d6efd;
            color: white;
            padding: 12px 15px;
            text-align: left;
            font-weight: 600;
            border: none;
        }
        
        .users-table tbody tr {
            border-bottom: 1px solid #eee;
        }
        
        .users-table tbody tr:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }
        
        .users-table tbody td {
            padding: 12px 15px;
            color: #444;
        }
        
        .section-title {
            margin-bottom: 20px;
            font-size: 20px;
            font-weight: 600;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 2px solid #0d6efd;
        }
        
        .highlight-row {
            background-color: rgba(13, 110, 253, 0.1);
            font-weight: 500;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="order-container">
        <div class="header-flex">
            <h1>Détails du Produit</h1>
            <a href="{{ path('app_commande_index') }}" class="back-link">
                <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
            </a>
        </div>
        
        <div class="product-info">
            <div class="product-details">
                <div class="product-name">{{ commande.produit.nomProduit }}</div>
                <div class="product-price">{{ stock ? stock.prixProduit : 'N/A' }} TND</div>
            </div>
        </div>
        
        <h2 class="section-title">Commandes de ce produit</h2>
        <div class="table-responsive">
            <table class="users-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Commandes</th>
                        <th>Total dépensé</th>
                    </tr>
                </thead>
                <tbody>
                    {% if users|length > 0 %}
                        {% for user in users %}
                            <tr {% if user.id == commande.utilisateur.id %}class="highlight-row"{% endif %}>
                                <td>{{ user.prenom }} {{ user.nom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{% if user.id == commande.utilisateur.id %}{{ commande.createdAt|date('d/m/Y H:i') }}{% else %}-{% endif %}</td>
                                <td>
                                    {% set status_class = user.lastStatus == 'terminé' ? '' : 
                                        (user.lastStatus == 'pending_payment' ? 'pending' : 
                                        (user.lastStatus == 'annulé' ? 'cancelled' : '')) %}
                                    <span class="status-badge {{ status_class }}">{{ user.lastStatus }}</span>
                                </td>
                                <td>{{ user.orderCount }}</td>
                                <td>{{ user.totalPrice }} TND</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td>{{ commande.utilisateur.prenom }} {{ commande.utilisateur.nom }}</td>
                            <td>{{ commande.utilisateur.email }}</td>
                            <td>{{ commande.createdAt|date('d/m/Y H:i') }}</td>
                            <td>
                                {% set status_class = commande.status == 'terminé' ? '' : 
                                    (commande.status == 'pending_payment' ? 'pending' : 
                                    (commande.status == 'annulé' ? 'cancelled' : '')) %}
                                <span class="status-badge {{ status_class }}">{{ commande.status }}</span>
                            </td>
                            <td>{{ order_count }}</td>
                            <td>{{ total_price }} TND</td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
        
        <div class="action-buttons">
            <form method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette commande?');" style="display: inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                <button class="btn-delete">
                    <i class="fas fa-trash-alt mr-2"></i> Supprimer
                </button>
            </form>
        </div>
    </div>
{% endblock %}