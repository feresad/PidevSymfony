{% extends 'base.html.twig' %}

{% block title %}Liste des Commandes{% endblock %}

{% block body %}
<div class="container mt-5" style="background-color: #091221; color: white;">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="background-color: #091221; border-color: #0236a5;">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #0236a5; color: white;">
                    <h2 class="mb-0" style="font-size: 28px; text-transform: uppercase;">Liste des Commandes</h2>
                    <a href="{{ path('app_commande_new') }}" class="btn" style="background-color: #fc0369; color: white;">Nouvelle Commande</a>
                </div>
                <div class="card-body p-4">
                    <table class="table" style="color: white; font-size: 18px;">
                        <thead style="background-color: #0585c6;">
                            <tr>
                                <th>Client</th>
                                <th>Produit</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for commande in commandes %}
                            <tr>
                                <td style="background-color: #091221; border-color: #0236a5; color: white;">{{ commande.utilisateur.nickname }}</td>
                                <td style="background-color: #091221; border-color: #0236a5; color: white;">{{ commande.produit.nomProduit }}</td>
                                <td style="background-color: #091221; border-color: #0236a5; color: white;">{{ commande.status }}</td>
                                <td style="background-color: #091221; border-color: #0236a5; color: white;">
                                    <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm" style="background-color: #0585c6; color: white;">Voir</a>
                                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-sm" style="background-color: #fc0369; color: white;">Modifier</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" style="background-color: #091221; border-color: #0236a5; color: white; text-align: center;">Aucune commande trouv√©e</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 