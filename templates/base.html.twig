        <!-- Consolidated JavaScript -->
        <script>
        $(document).ready(function() {
            // Chatbot Functionality
            const $chatbotToggler = $('.chatbot-toggler');
            const $chatbox = $('.chatbox');
            const $chatInput = $('.chat-input textarea');
            const $sendChatBtn = $('#send-btn');
            const inputInitHeight = $chatInput[0].scrollHeight;

            const createChatLi = (message, className) => {
                const chatLi = $('<li>').addClass('chat').addClass(className);
                const chatContent = className === 'outgoing' 
                    ? `<p>${message}</p>` 
                    : `<span class="fas fa-robot"></span><p></p>`;
                chatLi.html(chatContent);
                return chatLi;
            };

            const typeWriter = (text, element, speed = 100) => {
                const words = text.split(" ");
                let i = 0;

                function type() {
                    if (i < words.length) {
                        element.textContent += (i === 0 ? "" : " ") + words[i];
                        i++;
                        $chatbox.scrollTop($chatbox[0].scrollHeight);
                        setTimeout(type, speed);
                    }
                }
                type();
            };

            const handleChat = async () => {
                const userMessage = $chatInput.val().trim();
                if (!userMessage) return;

                $chatInput.val("");
                $chatInput.css('height', `${inputInitHeight}px`);

               

                const outgoingChatLi = createChatLi(userMessage, "outgoing");
                $chatbox.append(outgoingChatLi);
                $chatbox.scrollTop($chatbox[0].scrollHeight);

                try {
                    const response = await $.ajax({
                        url: "{{ path('chatbot') }}",
                        method: "POST",
                        contentType: "application/x-www-form-urlencoded",
                        data: { message: userMessage },
                        headers: { "X-Requested-With": "XMLHttpRequest" }
                    });

                    const incomingChatLi = createChatLi("", "incoming");
                    $chatbox.append(incomingChatLi);
                    const messageElement = incomingChatLi.find("p")[0];
                    typeWriter(response, messageElement, 100);
                } catch (error) {
                    console.error('Failed to get chatbot response:', error);
                    const errorLi = createChatLi("Erreur lors de la communication avec le chatbot.", "incoming");
                    $chatbox.append(errorLi);
                    $chatbox.scrollTop($chatbox[0].scrollHeight);
                }
            };

            $chatInput.on('input', () => {
                $chatInput.css('height', `${inputInitHeight}px`);
                $chatInput.css('height', `${$chatInput[0].scrollHeight}px`);
            });

            $chatInput.on('keydown', (e) => {
                if (e.key === "Enter" && !e.shiftKey) {
                    e.preventDefault();
                    handleChat();
                }
            });

            $sendChatBtn.on('click', handleChat);

            $chatbotToggler.on('click', (e) => {
                e.stopPropagation();
                $('body').toggleClass('show-chatbot');
            });

            // Notification Functionality
            const $bell = $('.notification-bell');
            const $count = $('.notification-count');
            const $dropdown = $('.notification-dropdown');
            const $list = $('.notification-list');
            const $markAllRead = $('.mark-all-read');

            function fetchNotifications() {
                $list.html('<li class="notification-item loading"><div class="spinner"></div></li>');

                $.ajax({
                    url: "{{ path('api_notifications') }}",
                    method: 'GET',
                    success: function(response) {
                        if (response.success) {
                            const notifications = response.notifications;
                            $count.text(notifications.length);
                            $count.toggle(notifications.length > 0);

                            $list.empty();
                            if (notifications.length > 0) {
                                notifications.forEach(function(notification) {
                                    const iconClass = notification.message.includes('comment') ? 'fas fa-comment' : 'fas fa-bell';
                                    $list.append(`
                                        <li class="notification-item ${notification.isRead ? '' : 'unread'}" data-id="${notification.id}">
                                            <div class="avatar"><span class="fas fa-user"></span></div>
                                            <div class="content">
                                                <a href="${notification.link}">${notification.message}</a>
                                                <small>${notification.createdAt}</small>
                                            </div>
                                        </li>
                                    `);
                                });
                                $markAllRead.show();
                            } else {
                                $list.append('<li class="notification-item">Aucune nouvelle notification</li>');
                                $markAllRead.hide();
                            }
                        } else {
                            console.error('Failed to fetch notifications:', response.message);
                            if (response.message === 'You must be logged in.') {
                                $list.empty().append('<li class="notification-item">Veuillez vous connecter pour voir les notifications</li>');
                                $markAllRead.hide();
                            }
                        }
                    },
                    error: function(xhr) {
                        console.error('Failed to fetch notifications:', xhr.status, xhr.responseText);
                        $list.empty().append('<li class="notification-item">Erreur lors de la récupération des notifications</li>');
                        $markAllRead.hide();
                    }
                });
            }

            fetchNotifications();
            setInterval(fetchNotifications, 30000);

            $bell.on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                $dropdown.toggleClass('show');
            });

            $markAllRead.on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const previousListContent = $list.html();
                $list.empty().append('<li class="notification-item">Aucune nouvelle notification</li>');
                $count.text('0').hide();
                $markAllRead.hide();

                $.ajax({
                    url: "{{ path('api_notifications_mark_all_read') }}",
                    method: 'POST',
                    success: function(response) {
                        if (response.success) {
                            console.log('All notifications marked as read:', response.message);
                        } else {
                            console.error('Failed to mark all notifications as read:', response.message);
                            alert('Erreur: ' + response.message);
                            fetchNotifications();
                        }
                    },
                    error: function(xhr) {
                        console.error('Failed to mark all notifications as read:', xhr.status, xhr.responseText);
                        alert('Erreur lors de la mise à jour des notifications.');
                        $list.html(previousListContent);
                        fetchNotifications();
                    }
                });
            });

            $list.on('click', '.notification-item', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const $item = $(this);
                const notificationId = $item.data('id');
                const link = $item.find('a').attr('href');

                if (notificationId) {
                    $.ajax({
                        url: "{{ path('api_notifications_read', {'id': 'ID'}) }}".replace('ID', notificationId),
                        method: 'POST',
                        success: function(response) {
                            if (response.success) {
                                $item.removeClass('unread');
                                fetchNotifications();
                                window.location.href = link;
                            }
                        },
                        error: function() {
                            console.error('Failed to mark notification as read');
                        }
                    });
                } else {
                    $dropdown.removeClass('show');
                }
            });

            $(document).on('click', function(e) {
                const $target = $(e.target);
                if (!$bell.is($target) && !$dropdown.is($target) && $dropdown.has($target).length === 0) {
                    $dropdown.removeClass('show');
                }
            });

            // Logout Functionality
            $('#logout-button').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                try {
                    localStorage.clear();
                    window.location.href = "{{ path('app_logout') }}";
                } catch (error) {
                    console.error('Error during logout:', error);
                    alert('Erreur lors de la déconnexion. Veuillez réessayer.');
                }
            });
        });
        </script>
