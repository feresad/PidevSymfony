        <!-- Notification CSS -->
        <style>
            .notification-wrapper {
                position: relative;
                display: inline-block;
                margin-left: 15px;
            }

            .notification-bell {
                font-size: 22px;
                color: #fff;
                cursor: pointer;
                transition: color 0.3s ease, transform 0.2s ease;
            }

            .notification-bell:hover {
                color: #0585e6;
                transform: scale(1.1);
            }

            .notification-count {
                position: absolute;
                top: -8px;
                right: -8px;
                border-radius: 50%;
                width: 20px;
                height: 20px;
                line-height: 20px;
                text-align: center;
                font-size: 12px;
                font-weight: bold;
                background: #e63946;
                color: #fff;
                border: 2px solid #232930;
            }

            .notification-dropdown {
                position: absolute;
                top: 40px;
                right: 0;
                background: #232930;
                border-radius: 10px;
                width: 320px;
                max-height: 450px;
                overflow-y: auto;
                z-index: 1000;
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
                opacity: 0;
                visibility: hidden;
                transform: translateY(-10px);
                transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
            }

            .notification-dropdown.show {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

            .notification-header {
                padding: 12px 15px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                display: flex;
                justify-content: space-between;
                align-items: center;
                background: linear-gradient(135deg, #2a2f38 0%, #232930 100%);
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
            }

            .notification-header h6 {
                margin: 0;
                font-size: 14px;
                font-weight: 600;
                color: #fff;
            }

            .notification-header .mark-all-read {
                font-size: 12px;
                color: #0585e6;
                cursor: pointer;
                text-decoration: none;
            }

            .notification-header .mark-all-read:hover {
                text-decoration: underline;
            }

            .notification-list {
                margin: 0;
                padding: 0;
            }

            .notification-item {
                display: flex;
                align-items: center;
                padding: 12px 15px;
                border-bottom: 1px solid rgba(255, 255, 255, 0.05);
                color: #d1d5db;
                cursor: pointer;
                transition: background 0.2s ease;
            }

            .notification-item.unread {
                background: rgba(5, 133, 230, 0.1);
            }

            .notification-item:hover {
                background: rgba(255, 255, 255, 0.05);
            }

            .notification-item .avatar {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 12px;
                background: #0585e6;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 18px;
                color: #fff;
            }

            .notification-item .avatar .fas {
                font-size: 18px;
            }

            .notification-item .content {
                flex: 1;
            }

            .notification-item a {
                color: #d1d5db;
                text-decoration: none;
                font-size: 14px;
                display: block;
                line-height: 1.4;
            }

            .notification-item a:hover {
                color: #0585e6;
            }

            .notification-item small {
                display: block;
                color: #a0a0a0;
                font-size: 12px;
                margin-top: 4px;
            }

            .notification-item:last-child {
                border-bottom: none;
            }

            .no-notifications {
                padding: 20px;
                text-align: center;
                color: #a0a0a0;
                font-size: 14px;
            }

            /* Scrollbar Styling */
            .notification-dropdown::-webkit-scrollbar {
                width: 8px;
            }

            .notification-dropdown::-webkit-scrollbar-track {
                background: #2a2f38;
                border-radius: 10px;
            }

            .notification-dropdown::-webkit-scrollbar-thumb {
                background: #0585e6;
                border-radius: 10px;
            }

            .notification-dropdown::-webkit-scrollbar-thumb:hover {
                background: #0469b5;
            }

            /* Loading Spinner */
            .notification-item.loading {
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 20px;
            }

            .notification-item.loading .spinner {
                border: 2px solid #0585e6;
                border-top: 2px solid transparent;
                border-radius: 50%;
                width: 24px;
                height: 24px;
                animation: spin 1s linear infinite;
            }

            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }
        </style>
    {% endblock %}
</head>
