{% extends 'base.html.twig' %}

{% block title %}Become a Coach{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body {
        background-image: url('http://localhost/img/HeimerdingerRev.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
    }
    .card {
        background-color: rgba(0, 0, 0, 0.8);
        color: white;
    }
    .card-header {
        background-color: rgba(0, 0, 0, 0.5);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }
    .form-control, .form-select {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
    }
    .form-control:focus, .form-select:focus {
        background-color: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        color: white;
        box-shadow: 0 0 0 0.25rem rgba(255, 255, 255, 0.1);
    }
    .form-control::placeholder {
        color: rgba(255, 255, 255, 0.6);
    }
    .form-select option {
        background-color: rgba(0, 0, 0, 0.9);
        color: white;
    }
    .form-text {
        color: rgba(255, 255, 255, 0.6);
    }
    .btn-primary {
        background-color: #0d6efd;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }
    .btn-primary:hover {
        background-color: #0b5ed7;
        transform: translateY(-2px);
        transition: all 0.3s ease;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Devenez coach</h2>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <form action="{{ path('app_submit_coach_application') }}" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="game" class="form-label">Sélectionnez le jeu</label>
                            <select class="form-select" id="game" name="game" required>
                                <option value="">Choisissez un jeu...</option>
                                {% for game in games %}
                                    <option value="{{ game.gameName }}">{{ game.gameName }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">À propos de vous et de vos compétences</label>
                            <textarea class="form-control" id="description" name="description" rows="5" required
                                    placeholder="Parlez-nous de votre expérience dans le gaming, de vos compétences en coaching et pourquoi vous souhaitez devenir coach..."></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="cv" class="form-label">Téléchargez votre CV</label>
                            <input type="file" class="form-control" id="cv" name="cv" accept=".pdf,.doc,.docx" required>
                            <div class="form-text">Accepted formats: PDF, DOC, DOCX</div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Soumettre une demande</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 