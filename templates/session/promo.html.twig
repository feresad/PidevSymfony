{% extends 'base.html.twig' %}

{% block title %}Sessions en promotion{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">Sessions en promotion</h1>
        <p class="lead text-muted">Découvrez nos sessions à moins de 60 DT</p>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for session in sessions %}
            <div class="col">
                <div class="card h-100 shadow-sm hover-shadow transition">
                    {% if session.imageName %}
                        <img src="{{ image_base_url ~  session.imageName }}" 
                             class="card-img-top" 
                             alt="{{ session.game }}" 
                             style="height: 200px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ session.game }}</h5>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="badge bg-success fs-6">{{ session.prix }} DT</span>
                            <span class="text-muted">{{ session.dureeSession }}</span>
                        </div>
                        <div class="d-grid">
                            <a href="#" class="btn btn-outline-primary">Voir les détails</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
.hover-shadow {
    transition: all 0.3s ease;
}
.hover-shadow:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
}
</style>
{% endblock %}