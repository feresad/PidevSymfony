{% extends 'base.html.twig' %}

{% block title %}Liste des sessions{% endblock %}

{% block body %}
<style>
body {
    background: #121212;
    color: #ffffff;
    font-family: 'Segoe UI', sans-serif;
}

.nk-title {
    font-size: 3em;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.2em;
    text-shadow: 0 0 10px rgba(221, 22, 59, 0.3);
    letter-spacing: 1px;
}

.nk-sub-title {
    color: #ccc;
    font-size: 1.2em;
    margin-bottom: 2em;
    letter-spacing: 0.5px;
    opacity: 0.9;
}

.nk-form .form-control {
    background: #1e1e1e;
    border: 1px solid #333;
    color: #fff;
    border-radius: 8px;
    padding: 12px 15px;
    transition: all 0.3s ease;
}

.nk-form .form-control:focus {
    border-color: #dd163b;
    box-shadow: 0 0 8px rgba(221, 22, 59, 0.4);
}

.nk-btn {
    background: #dd163b;
    border: none;
    color: white;
    font-weight: 600;
    padding: 0.6em 1.2em;
    border-radius: 8px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0,0,0,0.3);
}

.nk-btn:hover {
    background: #ff4d6d;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.4);
}

.nk-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
    transition: 0.5s;
}

.nk-btn:hover::after {
    left: 100%;
}

.nk-btn-color-main-5 {
    background: #333;
}

.nk-btn-color-main-5:hover {
    background: #555;
}

/* Carrousel horizontal */
.carousel-wrapper {
    position: relative;
    margin: 40px 0;
    padding: 0 20px;
}

.session-carousel {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    gap: 25px;
    padding: 15px 5px 25px;
    scrollbar-width: none;
}

.session-carousel::-webkit-scrollbar {
    display: none;
}

/* Carte session */
.session-card {
    flex: 0 0 auto;
    width: 280px;
    background: linear-gradient(145deg, #1a1a1a, #222);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    box-shadow: 0 10px 20px rgba(0,0,0,0.4);
    border: 1px solid rgba(255,255,255,0.05);
}

.session-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(221, 22, 59, 0.2);
    border-color: rgba(221, 22, 59, 0.2);
}

.session-card img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    filter: brightness(0.85);
    transition: filter 0.3s ease, transform 0.5s ease;
}

.session-card:hover img {
    filter: brightness(1);
    transform: scale(1.05);
}

.session-info {
    padding: 20px;
}

.session-title {
    font-size: 1.4em;
    margin-bottom: 10px;
    color: #fff;
    font-weight: 600;
    letter-spacing: 0.5px;
}

.session-price {
    font-size: 1.2em;
    color: #dd163b;
    font-weight: bold;
    margin-bottom: 10px;
    display: inline-block;
    padding: 5px 10px;
    background: rgba(221, 22, 59, 0.1);
    border-radius: 20px;
}

.session-meta {
    font-size: 0.9em;
    color: #aaa;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 5px;
}

.session-meta i {
    color: #dd163b;
}

/* Flèches */
.carousel-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(221, 22, 59, 0.8);
    border: none;
    color: white;
    font-size: 1.5em;
    width: 40px;
    height: 40px;
    line-height: 40px;
    text-align: center;
    z-index: 10;
    cursor: pointer;
    border-radius: 50%;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
    transition: all 0.3s ease;
}

.carousel-arrow:hover {
    background: #dd163b;
    transform: translateY(-50%) scale(1.1);
}

.carousel-arrow.left {
    left: -5px;
}

.carousel-arrow.right {
    right: -5px;
}

.navigation-buttons {
    margin-top: 40px;
    display: flex;
    justify-content: center;
    gap: 15px;
}

/* Action buttons in session card */
.session-card .d-flex {
    gap: 8px !important;
}

.session-card .nk-btn {
    padding: 8px 12px;
    font-size: 0.9em;
    flex: 1;
    text-align: center;
}

/* Delete Confirmation Modal */
.delete-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    justify-content: center;
    align-items: center;
}

.delete-modal.show {
    display: flex;
}

.delete-modal-content {
    background: #1a1a1a;
    padding: 30px;
    border-radius: 15px;
    text-align: center;
    max-width: 400px;
    width: 90%;
    border: 1px solid rgba(221, 22, 59, 0.3);
    box-shadow: 0 0 30px rgba(221, 22, 59, 0.2);
}

.delete-modal-title {
    color: #fff;
    font-size: 1.5em;
    margin-bottom: 20px;
}

.delete-modal-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-top: 25px;
}

/* Delete Notification */
.delete-notification {
    position: fixed;
    top: 20px;
    right: 20px;
    background: rgba(221, 22, 59, 0.9);
    color: white;
    padding: 15px 25px;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    transform: translateX(120%);
    transition: transform 0.3s ease-in-out;
    display: flex;
    align-items: center;
    gap: 10px;
}

.delete-notification.show {
    transform: translateX(0);
}

.delete-notification i {
    font-size: 20px;
}
</style>

<div class="nk-main">
    <div class="nk-gap-2"></div>
    <div class="container">
        <div class="nk-gap-2"></div>
        <h1 class="nk-title text-center">Liste des sessions</h1>
        <h3 class="nk-sub-title text-center mb-30">Gérez vos sessions de jeux</h3>

        <!-- Formulaire de recherche -->
        <form method="get" class="nk-form nk-form-style-1 mb-50">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control required" placeholder="Rechercher par nom du jeu..." value="{{ searchQuery }}">
                        <button type="submit" class="nk-btn nk-btn-rounded ml-2">Rechercher</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Boutons d'action -->
        <div class="text-center mb-30 navigation-buttons">
            <a href="{{ path('session_add') }}" class="nk-btn nk-btn-rounded">Ajouter une session</a>
            <a href="{{ path('coach_reservations') }}" class="nk-btn nk-btn-rounded">Voir les réservations</a>
            <a href="{{ path('request_list') }}" class="nk-btn nk-btn-rounded">Liste des demandes</a>
        </div>

        <!-- Carrousel des sessions -->
        <div class="carousel-wrapper mt-4">
            <button class="carousel-arrow left" onclick="scrollCarousel(-1)">❮</button>
            <div class="session-carousel" id="sessionCarousel">
                {% for session in sessions %}
                    <div class="session-card">
                        {% if session.imageName %}
                            <img src="{{ image_base_url ~ session.imageName }}" alt="{{ session.game }}">
                        {% endif %}
                        <div class="session-info">
                            <div class="session-title">{{ session.game }}</div>
                            <div class="session-price">{{ session.prix }} DT</div>
                            <div class="session-meta"><i class="far fa-clock"></i> {{ session.dureeSession }} min</div>
                            <div class="d-flex gap-2 mt-3">
                                <a href="{{ path('session_edit', {'id': session.id}) }}" class="nk-btn nk-btn-rounded">Modifier</a>
                                <button type="button" class="nk-btn nk-btn-rounded nk-btn-color-main-5" onclick="showDeleteModal('{{ session.id }}')">Supprimer</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-arrow right" onclick="scrollCarousel(1)">❯</button>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="delete-modal" id="deleteModal">
        <div class="delete-modal-content">
            <h3 class="delete-modal-title">Confirmer la suppression</h3>
            <p style="color: #ccc;">Êtes-vous sûr de vouloir supprimer cette session ?</p>
            <div class="delete-modal-buttons">
                <button class="nk-btn nk-btn-rounded nk-btn-color-main-5" onclick="closeDeleteModal()">Annuler</button>
                <button class="nk-btn nk-btn-rounded" id="confirmDeleteBtn">Supprimer</button>
            </div>
        </div>
    </div>

    <!-- Delete Notification -->
    <div class="delete-notification" id="deleteNotification">
        <i class="fas fa-trash-alt"></i>
        <span>Session supprimée avec succès</span>
    </div>
</div>

<img class="nk-page-background-top" src="{{ asset('images/bg-top.png') }}" alt="">
<img class="nk-page-background-bottom" src="{{ asset('images/bg-bottom.png') }}" alt="">

<script>
function showDeleteModal(sessionId) {
    const modal = document.getElementById('deleteModal');
    const confirmBtn = document.getElementById('confirmDeleteBtn');
    
    modal.classList.add('show');
    
    confirmBtn.onclick = function() {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/session/${sessionId}/delete`; // URL corrigée
        
        // Ajout du token CSRF
        const tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '_token';
        tokenInput.value = "{{ csrf_token('delete' ~ session.id) }}";
        
        form.appendChild(tokenInput);
        document.body.appendChild(form);
        form.submit();
        
        closeDeleteModal();
        showDeleteNotification();
    };
}

function closeDeleteModal() {
    const modal = document.getElementById('deleteModal');
    modal.classList.remove('show');
}

function showDeleteNotification() {
    const notification = document.getElementById('deleteNotification');
    notification.classList.add('show');
    setTimeout(() => {
        notification.classList.remove('show');
    }, 2000);
}

// Gestion des messages flash
document.addEventListener('DOMContentLoaded', function() {
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            const notification = document.getElementById('deleteNotification');
            notification.innerHTML = `<i class="fas fa-{% if label == 'success' %}check-circle{% else %}exclamation-circle{% endif %}"></i><span>${message}</span>`;
            notification.classList.add('show');
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        {% endfor %}
    {% endfor %}
});
</script>
{% endblock %}
