
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    <!-- ======= Styles ====== -->
    {% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="stylesheet" href="{{ asset('css/StyleEvenement.css') }}">
    {% endblock %}
</head>
<body>
    <!-- =============== Nouveau Sidebar ================ -->
    <nav id="sidebar">
        <ul>
            <li>
                <span class="logo">Level OP</span>
                <button onclick="toggleSidebar()" id="toggle-btn">
                    <!-- Icon for sidebar open (chevron-left) -->
                    <ion-icon class="toggle-icon open-icon" name="chevron-back-outline"></ion-icon>
                    <!-- Icon for sidebar closed (chevron-right) -->
                    <ion-icon class="toggle-icon close-icon" name="chevron-forward-outline"></ion-icon>
                </button>
            </li>
            <li class="active">
                <a href="">
                    <ion-icon name="home-outline"></ion-icon>
                    <span>Dashboard</span>
                </a>
            </li>
            <li>
                <button onclick="toggleSubMenu(this)" class="dropdown-btn">
                    <ion-icon name="calendar-outline"></ion-icon>
                    <span>Evenement</span>
                    <ion-icon class="dropdown-icon" name="chevron-down-outline"></ion-icon>
                </button>
                <ul class="sub-menu">
                    <div>
                        <li><a href="{{ path('evenement_ajouter') }}">Ajouter un Evenement</a></li>
                        <li><a href="{{ path('evenement_list_admin') }}">Liste Evenements</a></li>
                        <li><a href="{{ path('categorie_ajouter') }}">Ajouter une Categorie</a></li>
                        <li><a href="{{ path('categorie_list_admin') }}">Liste Categories</a></li>
                    </div>
                </ul>
            </li>
            <li>
                <a href="">
                    <ion-icon name="chatbubbles-outline"></ion-icon>
                    <span>Messages</span>
                </a>
            </li>
            <li>
                <a href="">
                    <ion-icon name="help-circle-outline"></ion-icon>
                    <span>Help</span>
                </a>
            </li>
            <li>
                <a href="">
                    <ion-icon name="settings-outline"></ion-icon>
                    <span>Settings</span>
                </a>
            </li>
            <li>
                <a href="">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <span>Password</span>
                </a>
            </li>
            <li>
                <a href="">
                    <ion-icon name="log-out-outline"></ion-icon>
                    <span>Sign Out</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- ========================= Main ==================== -->
    <div class="main">
        <div class="topbar">
            <div class="search">
                <label>
                    <input type="text" placeholder="Search here">
                    <ion-icon name="search-outline"></ion-icon>
                </label>
            </div>
            <div class="user">
                <img src="{{ asset('images/customer01.jpg') }}" alt="">
            </div>
        </div>

        <!-- Contenu dynamique -->
        {% block body %}{% endblock %}
    </div>

    <!-- =========== Scripts =========  -->
    {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
        <script type="module" src="https://cdn.jsdelivr.net/npm/@ionic/core@7.1.2/dist/ionic/ionic.esm.js"></script>
        <script nomodule src="https://cdn.jsdelivr.net/npm/@ionic/core@7.1.2/dist/ionic/ionic.js"></script>
        <script>
            function toggleSidebar() {
                const sidebar = document.getElementById("sidebar");
                const main = document.querySelector(".main");
                sidebar.classList.toggle("close");
                main.classList.toggle("close");
            }

            function toggleSubMenu(button) {
                const subMenu = button.nextElementSibling;
                subMenu.classList.toggle("show");
                button.classList.toggle("rotate");
            }
        </script>
    {% endblock %}
</body>
</html>