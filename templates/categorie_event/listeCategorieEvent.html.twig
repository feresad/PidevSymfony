{% extends 'base.html.twig' %}

{% block title %}Liste des Catégories d'Événements{% endblock %}

{% block body %}
    <div class="nk-page-content">
        <div class="container mt-4 nk-content-area">
            <div id="dynamic-content">
                <div class="row">
                    {% for categorie in CategorieEvent %}
                        <div class="col-md-4 mb-4">
                            <div class="nk-category-card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ categorie.nom }}</h5>
                                    <p class="card-text">
                                        <i class="fas fa-info-circle"></i> {{ categorie.descCategorieEvent }}
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <a href="{{ path('categorie_voir', {id: categorie.id}) }}" class="nk-btn nk-btn-outline-primary">
                                                <i class="fas fa-eye"></i> Voir
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info">
                                Aucune catégorie n'a été trouvée.
                                <a href="{{ path('categorie_ajouter') }}" class="btn btn-primary btn-sm ml-3">
                                    <i class="fas fa-plus"></i> Créer une catégorie
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Background images -->
        <img class="nk-page-background-top" src="{{ asset('images/bg-top.png') }}" alt="">
        <img class="nk-page-background-bottom" src="{{ asset('images/bg-bottom.png') }}" alt="">
    </div>
{% endblock %}