{% extends 'base.html.twig' %}

{% block title %}Détails de la catégorie : {{ categorie.nom }}{% endblock %}

{% block body %}
    <div class="nk-page-content">
        <div class="container mt-4 nk-category-details">
            <h1>{{ categorie.nom }}</h1>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="nk-category-detail-card">
                <div class="card-body">
                    <h5 class="card-title">Détails de la catégorie</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <strong>Nom :</strong> {{ categorie.nom }}
                        </li>
                        <li class="list-group-item">
                            <strong>Description :</strong> {{ categorie.descCategorieEvent }}
                        </li>
                    </ul>
                </div>
            </div>

            <div class="mt-3">
                <a href="{{ path('categorie_list') }}" class="nk-btn nk-btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>

        <!-- Background de la page d'accueil -->
        <img class="nk-page-background-top" src="{{ asset('images/bg-top.png') }}" alt="">
        <img class="nk-page-background-bottom" src="{{ asset('images/bg-bottom.png') }}" alt="">
    </div>
{% endblock %}