{% extends 'baseadmin.html.twig' %}

{% block title %}Ajouter une catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="mb-4">Ajouter une nouvelle catégorie</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }} {# Display global form errors #}

            <div class="mb-3">
                {{ form_label(form.nom, 'Nom de la catégorie', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.descCategorieEvent, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descCategorieEvent, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.descCategorieEvent) }}
                </div> 
            </div>

            <div class="d-flex justify-content-center gap-2 mt-3">
                {{ form_widget(form.Button, {'attr': {'class': 'btn btn-primary'}}) }}
                <a href="{{ path('categorie_list_admin') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}