{% extends 'baseadmin.html.twig' %}

{% block title %}Liste des Catégories d'Événements{% endblock %}

{% block body %}
    <div class="container-main mt-4 liste">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des Catégories d'Événements</h1>
            <a href="{{ path('categorie_ajouter') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvelle Catégorie
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="grid-row">
            {% for categorie in CategorieEvent %}
                <div class="grid-col">
                    <div class="card-main h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ categorie.nom }}</h5>
                            <p class="card-text">
                                <i class="fas fa-info-circle"></i> {{ categorie.descCategorieEvent }}
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="{{ path('categorie_voir', {id: categorie.id}) }}" class="btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> Voir
                                    </a>
                                    <a href="{{ path('categorie_modifier', {id: categorie.id}) }}" class="btn-sm btn-outline-secondary">
                                        <i class="fas fa-edit"></i> Modifier
                                    </a>
                                </div>
                                <a href="{{ path('delete_categorie', {id: categorie.id}) }}" 
                                   onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" 
                                   class="btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert-info">
                        Aucune catégorie n'a été trouvée.
                        <a href="{{ path('categorie_ajouter') }}" class="btn-main btn-sm ml-3">
                            <i class="fas fa-plus"></i> Créer une catégorie
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}