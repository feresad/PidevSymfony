{% extends 'baseadmin.html.twig' %}

{% block title %}{{ game ? 'Modifier le jeu' : 'Ajouter un nouveau jeu' }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="gaming-wrapper">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="details">
            <div class="recentOrders">
                <div class="cardHeader">
                    <h2>{{ game ? 'Modifier le jeu' : 'Ajouter un nouveau jeu' }}</h2>
                    <a href="{{ path('admin_games_dashboard') }}" class="btn">Retour au tableau de bord</a>
                </div>

                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.game_name, 'Nom du jeu') }}
                        {{ form_widget(form.game_name) }}
                        {{ form_errors(form.game_name) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.image_path, 'Image du jeu') }}
                        {{ form_widget(form.image_path) }}
                        {{ form_errors(form.image_path) }}
                        {% if game and game.getImagePath() %}
                            <p>Image actuelle : <img src="http://localhost/img/games/{{ game.getImagePath() }}" alt="{{ game.getGameName() }}" style="max-width: 200px; margin-top: 10px; border-radius: 5px;"></p>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.game_type, 'Type de jeu') }}
                        {{ form_widget(form.game_type) }}
                        {{ form_errors(form.game_type) }}
                    </div>

                    <div class="form-group">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn'}}) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>

        <style>
            .gaming-wrapper {
                background-color: #091221 !important;
                color: #ffffff;
                min-height: 100vh;
                position: relative;
                font-family: 'Roboto', sans-serif;
                padding: 20px;
            }
            .details {
                padding: 20px;
            }
            .recentOrders {
                background: rgba(9, 18, 33, 0.9);
                border: 1px solid transparent;
                border-radius: 10px;
                padding: 20px;
                animation: neon-border 3s infinite;
            }
            @keyframes neon-border {
                0%, 100% { border-color: #0236a5; box-shadow: 0 0 10px rgba(2, 54, 165, 0.5); }
                50% { border-color: #fe0369; box-shadow: 0 0 10px rgba(254, 3, 105, 0.5); }
            }
            .recentOrders:hover {
                animation-play-state: paused;
                border-color: #fe0369;
                box-shadow: 0 0 15px rgba(254, 3, 105, 0.5);
            }
            .cardHeader {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 20px;
            }
            .cardHeader h2 {
                font-family: 'Orbitron', sans-serif;
                font-size: 1.8rem;
                color: #fe0369;
                text-shadow: 0 0 10px rgba(254, 3, 105, 0.5);
                position: relative;
                animation: glitch 2s linear infinite;
            }
            .cardHeader h2::before,
            .cardHeader h2::after {
                content: '{{ game ? "Modifier le jeu" : "Ajouter un nouveau jeu" }}';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                color: #0585c6;
            }
            .cardHeader h2::before {
                animation: glitch-top 1s linear infinite;
                clip-path: polygon(0 0, 100% 0, 100% 33%, 0 33%);
                -webkit-clip-path: polygon(0 0, 100% 0, 100% 33%, 0 33%);
            }
            .cardHeader h2::after {
                animation: glitch-bottom 1.5s linear infinite;
                clip-path: polygon(0 67%, 100% 67%, 100% 100%, 0 100%);
                -webkit-clip-path: polygon(0 67%, 100% 67%, 100% 100%, 0 100%);
            }
            @keyframes glitch {
                2%, 64% { transform: translate(2px, 0) skew(0deg); }
                4%, 60% { transform: translate(-2px, 0) skew(0deg); }
                62% { transform: translate(0, 0) skew(5deg); }
            }
            @keyframes glitch-top {
                2%, 64% { transform: translate(2px, -2px); }
                4%, 60% { transform: translate(-2px, 2px); }
                62% { transform: translate(13px, -1px) skew(-13deg); }
            }
            @keyframes glitch-bottom {
                2%, 64% { transform: translate(-2px, 0); }
                4%, 60% { transform: translate(-2px, 0); }
                62% { transform: translate(-22px, 5px) skew(21deg); }
            }
            .form-group {
                margin-bottom: 20px;
            }
            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-family: 'Orbitron', sans-serif;
                font-weight: bold;
                color: #0585c6;
                text-shadow: 0 0 5px rgba(5, 133, 198, 0.5);
            }
            .form-group input, .form-group select {
                width: 100%;
                padding: 8px;
                border-radius: 5px;
                border: 1px solid #0236a5;
                background: #091221;
                color: #fff;
                transition: all 0.3s ease;
            }
            .form-group input::placeholder {
                color: rgba(255, 255, 255, 0.5);
            }
            .form-group input:focus, .form-group select:focus {
                outline: none;
                border-color: #fe0369;
                box-shadow: 0 0 5px rgba(254, 3, 105, 0.5);
            }
            .form-group p {
                color: #0585c6;
                margin-top: 5px;
            }
            .btn {
                padding: 10px 20px;
                background: #0585c6;
                color: #fff;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-family: 'Orbitron', sans-serif;
                transition: background 0.3s ease;
            }
            .btn:hover {
                background: #fe0369;
            }
            .flash-success {
                color: #fff;
                padding: 10px;
                margin: 10px 20px;
                background: rgba(5, 133, 230, 0.3);
                border: 1px solid #0585c6;
                border-radius: 5px;
                font-family: 'Roboto', sans-serif;
            }
            .flash-error {
                color: #fff;
                padding: 10px;
                margin: 10px 20px;
                background: rgba(254, 3, 105, 0.3);
                border: 1px solid #fe0369;
                border-radius: 5px;
                font-family: 'Roboto', sans-serif;
            }
        </style>
    </div>
{% endblock %}