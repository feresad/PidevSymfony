{% extends 'base.html.twig' %}

{% block title %}Modifier un Stock{% endblock %}

{% block body %}
<div class="container mt-5" style="background-color: #091221; color: white;">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="background-color: #091221; border-color: #0236a5;">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #0236a5; color: white;">
                    <h2>Modifier un Stock</h2>
                    <div>
                        <a href="{{ path('app_stock_index') }}" class="btn btn-secondary" style="background-color: #0585c6; border-color: #0585c6;">Retour Ã  la liste</a>
                    </div>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_label(form.produit, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.produit, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.produit) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.games, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.games, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.games) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.quantity, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.quantity, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.quantity) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.prix_produit, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.prix_produit, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.prix_produit) }}
                            </div>
                        </div>

                        {% if form.fichierImage is defined %}
                        <div class="form-group mb-3">
                            {{ form_label(form.fichierImage, null, {'label_attr': {'style': 'color: white;'}}) }}
                            {{ form_widget(form.fichierImage, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                            <div class="text-danger">
                                {{ form_errors(form.fichierImage) }}
                            </div>
                        </div>
                        {% endif %}

                        {% if stock.image %}
                            <div class="mb-3">
                                <p style="color: white;">Image actuelle :</p>
                                <img src="{{ image_base_url ~ stock.image }}" alt="Current image" style="max-width: 200px; border: 2px solid #0236a5;">
                            </div>
                        {% endif %}

                        <button class="btn btn-primary" style="background-color: #fc0369; border-color: #fc0369;">{{ button_label|default('Enregistrer') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}