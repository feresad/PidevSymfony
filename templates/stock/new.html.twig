{% extends 'base.html.twig' %}

{% block title %}Nouveau Stock{% endblock %}

{% block body %}
<div class="container mt-5" style="background-color: #091221; color: white;">
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="background-color: #091221; border-color: #0236a5;">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: #0236a5; color: white;">
                    <h2 class="mb-0">Créer un nouveau stock</h2>
                    <a href="{{ path('app_stock_index') }}" class="btn" style="background-color: #0585c6; color: white;">Retour à la liste</a>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        <div class="form-group mb-4">
                            {{ form_label(form.produit, null, {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.produit, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.quantity, null, {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.quantity, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.prixProduit, null, {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.prixProduit, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                        </div>

                        <div class="form-group mb-4">
                            {{ form_label(form.fichierImage, 'Image', {'label_attr': {'style': 'color: white; font-weight: 600;'}}) }}
                            {{ form_widget(form.fichierImage, {'attr': {'class': 'form-control', 'style': 'background-color: #091221; color: white; border-color: #0236a5;'}}) }}
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn" style="background-color: #fc0369; color: white;">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}